<% form_for(@user) do |f| %>
  <%= f.error_messages %>
<p>
  <%= f.label :name, "Name" %>
  <%= f.text_field :name %>
</p>
<p>
  <%= f.label :login, "Login" %>
  <%= f.text_field :login %>
</p>
<p>
  <%= f.label :password, "Password" %>
  <%= f.text_field :password %>
</p>
<p>
  <%= f.submit "Save" %>
</p>
<% end %>

